// HSK AI Coach - Database Schema
// Supabase (PostgreSQL) with Prisma ORM

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                    String                @id @default(cuid())
  email                 String?               @unique
  emailVerified         DateTime?
  name                  String?
  password              String?
  image                 String?
  plan                  Plan                  @default(FREE)
  dailyUsage            Int                   @default(0)
  lastUsageDate         DateTime?
  stripeCustomerId      String?               @unique
  stripeSubscriptionId  String?
  organizationId        String?
  organization          Organization?         @relation(fields: [organizationId], references: [id])
  consentAccepted       Boolean               @default(false)
  deletedAt             DateTime?
  createdAt             DateTime              @default(now())
  updatedAt             DateTime              @updatedAt
  analyses              Analysis[]
  accounts              Account[]
  sessions              Session[]
  cognitiveProfile      CognitiveProfile?
  errorLogs             ErrorLog[]
  flashcards            Flashcard[]
  orgMemberships        OrganizationMember[]
  auditLogs             AuditLog[]            @relation("AuditActor")

  @@index([organizationId])
}

model Analysis {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  mode      Mode     @default(WRITING)
  hskLevel  Int
  inputText String   @db.Text
  result    Json
  score     Int?
  createdAt DateTime @default(now())
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String   @id
  token      String   @unique
  expires    DateTime
}

model CognitiveProfile {
  id                String   @id @default(cuid())
  userId            String   @unique
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  hskTarget         Int      @default(5)
  predictedScore    Int?
  predictedPassDate DateTime?
  optimalSession    Int      @default(20)
  memoryDecay       String   @default("medium")
  weakPatterns      Json     @default("[]")
  studyStreak       Int      @default(0)
  totalAnalyses     Int      @default(0)
  updatedAt         DateTime @updatedAt
  createdAt         DateTime @default(now())
}

model ErrorLog {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  errorType  String
  wrongText  String   @db.Text
  correction String   @db.Text
  hskLevel   Int
  context    String?  @db.Text
  createdAt  DateTime @default(now())

  @@index([userId, errorType])
}

model Flashcard {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  word      String
  hskLevel  Int
  fsrsState Json
  due       DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, word])
  @@index([userId])
}

// ============================================
// Multi-tenant B2B (Phase 3)
// ============================================

model Organization {
  id            String               @id @default(cuid())
  name          String
  slug          String               @unique
  plan          OrgPlan              @default(TEAM)
  settings      Json                 @default("{}")
  logoUrl       String?
  createdAt     DateTime             @default(now())
  updatedAt     DateTime             @updatedAt
  users         User[]
  members       OrganizationMember[]
  subscriptions Subscription[]
  usageQuotas   UsageQuota[]
  auditLogs     AuditLog[]
  invitations   Invitation[]
}

model OrganizationMember {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  userId         String
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  role           OrgRole      @default(MEMBER)
  joinedAt       DateTime     @default(now())

  @@unique([organizationId, userId])
  @@index([userId])
}

model Subscription {
  id                   String       @id @default(cuid())
  organizationId       String
  organization         Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  plan                 OrgPlan
  seats                Int          @default(5)
  stripeSubscriptionId String?
  status               String       @default("active")
  currentPeriodEnd     DateTime?
  createdAt            DateTime     @default(now())
  updatedAt            DateTime     @updatedAt

  @@index([organizationId])
}

model UsageQuota {
  id             String        @id @default(cuid())
  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  userId         String
  type           String        // "analysis", "exercise", "mock-exam"
  count          Int           @default(0)
  limit          Int           @default(50)
  resetAt        DateTime

  @@unique([organizationId, userId, type])
  @@index([userId])
}

model AuditLog {
  id             String        @id @default(cuid())
  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  actorId        String
  actor          User          @relation("AuditActor", fields: [actorId], references: [id])
  action         String        // "member.invited", "member.removed", "settings.updated", etc.
  resource       String        // "organization", "member", "subscription"
  metadata       Json          @default("{}")
  createdAt      DateTime      @default(now())

  @@index([organizationId, createdAt])
  @@index([actorId])
}

model Invitation {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  email          String
  role           OrgRole      @default(MEMBER)
  token          String       @unique @default(cuid())
  expiresAt      DateTime
  acceptedAt     DateTime?
  createdAt      DateTime     @default(now())

  @@index([organizationId])
  @@index([token])
}

enum Plan {
  FREE
  PREMIUM
}

enum Mode {
  WRITING
  READING
}

enum OrgRole {
  SUPER_ADMIN
  ORG_ADMIN
  TEACHER
  MEMBER
  VIEWER
}

enum OrgPlan {
  TEAM
  SCHOOL
  ENTERPRISE
}

